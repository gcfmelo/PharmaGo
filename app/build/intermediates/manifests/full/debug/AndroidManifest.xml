<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.phago.pharmago"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="br.com.phago.pharmago.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.phago.pharmago.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="br.com.phago.pharmago.UserMenuActivity"
            android:label="@string/title_activity_user_menu" />
        <activity
            android:name="br.com.phago.pharmago.AccountMenuActivity"
            android:label="@string/title_activity_account_menu" />
        <activity
            android:name="br.com.phago.pharmago.CampaignsMenuActivity"
            android:label="@string/title_activity_campaigns_menu" />

        <service
            android:name="br.com.phago.pharmago.getWsData"
            android:exported="false" />
        // true if available for other Apps
        <activity
            android:name="br.com.phago.pharmago.ClosedCampaignsListActivity"
            android:label="@string/button_text" />
        <activity android:name="br.com.phago.pharmago.CampaignsActivityList" />
    </application>

</manifest>