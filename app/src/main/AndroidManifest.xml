<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.phago.pharmago">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".UserMenuActivity"
            android:label="@string/title_activity_user_menu" />
        <activity
            android:name=".AccountMenuActivity"
            android:label="@string/title_activity_account_menu" />
        <activity
            android:name=".AboutMenuActivity"
            android:label="@string/title_activity_about_menu" />
        <activity
            android:name=".CampaignsMenuActivity"
            android:label="@string/title_activity_campaigns_menu" />

        <service
            android:name=".getWsData"
            android:exported="false" />
        // true if available for other Apps
        <activity
            android:name=".ClosedCampaignsListActivity"
            android:label="@string/button_text" />
        <activity android:name=".CampaignsActivityList"></activity>
    </application>

</manifest>