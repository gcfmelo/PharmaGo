<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.phago.pharmago.MainActivity"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:id="@+id/head_title_linear_layout">

            <EditText
                android:id="@+id/head_title_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none"
                android:selectAllOnFocus="false"
                android:text="Campaign activities"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:visibility="visible"
                tools:focusable="false"
                tools:focusableInTouchMode="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/campaign_list_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/head_title_linear_layout"
            android:orientation="horizontal">

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
